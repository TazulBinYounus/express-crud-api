<%- include("../partials/_header") %>

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-10">
            <h4 class="text-white ">Create Invoce</h4>
        </div>

        <div class=" col-md-2 ">
            <a href="/store" class="btn btn-info">Invoice List</a>
        </div>
    </div>
  <div class="row">
    <div class="col-md-12">
      <div class="card-body">
        <form action="/add" method="POST">
          <input
            type="text"
            name="name"
            placeholder="Name"
            class="form-control mb-2"
            autofocus
          />
 

          <textarea 
            placeholder="Description"
            class="form-control mb-2"
            name="description"
            id="" 
            cols="30"
            rows="10">
            </textarea>
  
          <button type="submit" class="btn btn-info">save</button>
        </form>
      </div>
    </div>
  </div>
</div>

